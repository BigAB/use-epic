{
  "name": "use-epic",
  "version": "0.0.3",
  "description": "Use RxJS Epics as state management for your React Components",
  "main": "src/index",
  "scripts": {
    "lint": "eslint src",
    "start": "run-p build:watch test:watch",
    "test": "jest test/*test.js --coverage",
    "test:watch": "jest test/*test.js --watch",
    "pretest": "npm run build",
    "build": "pack build",
    "publish": "pack publish",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BigAB/use-epic.git"
  },
  "keywords": [],
  "author": "BigAB <bigab@live.ca> (http://bigab.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BigAB/use-epic/issues"
  },
  "homepage": "https://github.com/BigAB/use-epic#readme",
  "peerDependencies": {
    "react": "^16.8.6",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-umd": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-standard-pkg": "^0.4.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.0",
    "pretty-quick": "^1.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rxjs": "^6.5.2"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "jsxSingleQuote": true,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": 76
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "test/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-umd",
        {
          "name": "useEpic"
        }
      ]
    ]
  }
}
