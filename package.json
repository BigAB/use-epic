{
  "name": "use-epic",
  "version": "0.5.0",
  "description": "Use RxJS Epics as state management for your React Components",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/use-epic.cjs.js",
  "module": "dist/use-epic.esm.js",
  "browser": "dist/use-epic.umd.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "start": "run-p build:watch test:watch",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "jest test/test.js --coverage",
    "test:watch": "jest test/test.js --watch",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand",
    "pretest": "npm run build",
    "examples": "serve",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BigAB/use-epic.git"
  },
  "keywords": [
    "react",
    "rxjs",
    "hooks",
    "epic",
    "observables"
  ],
  "author": "BigAB <bigab@live.ca> (http://bigab.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BigAB/use-epic/issues"
  },
  "homepage": "https://github.com/BigAB/use-epic#readme",
  "peerDependencies": {
    "react": "^16.12.0",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@testing-library/react-hooks": "^3.2.1",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "release-it": "^13.0.0",
    "rollup": "^1.31.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rxjs": "^6.5.4",
    "serve": "^11.3.0",
    "steal": "^2.2.4",
    "steal-css": "^1.3.2"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "jsxSingleQuote": true,
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.js",
      "!src/index.js"
    ]
  },
  "browserslist": [
    "last 2 versions and >5%"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "steal": {
    "plugins": [
      "steal-css"
    ]
  },
  "release-it": {
    "hooks": {
      "before:init": "npm test"
    }
  }
}
